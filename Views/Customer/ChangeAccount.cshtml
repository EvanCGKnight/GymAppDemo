@model GymApp.Models.Customer
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Client Application</h2>

<form action="ChangeAccount" method="post">
    <table>
        <tr class="app-form">
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
        <tr class="app-form">
            <td>@Html.TextBox("FName", Model.FirstName )</td>
            <td>@Html.TextBox("LName", Model.LastName )</td>
        </tr>
        <tr class="app-form">
            <th>Membership</th>
            <th>Payment</th>
        </tr>
        <tr class="app-form">
            <td>
                @Html.RadioButtonFor(Model => Model.Membership, "Full Package")  Full Package <br />

                @Html.RadioButtonFor(Model => Model.Membership, "Casual") Casual
            </td>
            <td>
               90<br />75
            </td>
        </tr>
        <tr class="app-form">
            <th>Trainer</th>
            <th>Expiration</th>
        </tr>
        <tr class="app-form">
            <td>
                @Html.RadioButtonFor(Model => Model.Trainer, "True")  Yes (10) <br />

                @Html.RadioButtonFor(Model => Model.Trainer, "False") No
            </td>
            
                @if (Model.ExpMonth > DateTime.Now.Month || Model.ExpYear > DateTime.Now.Year)
                {
                   <td> @Model.ExpMonth/ @Model.ExpYear</td>
                }
                else
                {
                    <td>Expired</td>
                }
        </tr>
    </table>
    <button type="submit">Enter</button>
</form>

